{
  "compilerOptions": {
    "outDir": "./built",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./plugins/**/*",
    "./typings/**/*",
    "./built/**/*",
    "node_modules"
  ]
}
